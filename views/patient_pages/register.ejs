<!DOCTYPE HTML>
<lang html>

<head>
    <title>SIGN UP PAGE</title>
    <link rel="stylesheet" type="text/css" href="/css/register.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.2.0/zxcvbn.js"></script>
</head>

<body>
    <div class="register">
        <form class="form"  method="POST">
            <h1><strong>Sign Up</strong></h1>
            <div class="input">
                <div class="input">
                    <label for="patient_id">Patient ID</label>
                    <% patient_id.forEach(function(row) { %>   
                    <input type="text" id="patient_id" name="patient_id" value="<%= row.sequence_value%>" readonly>
                    <% })%>
                </div>
                <div class="input">
                    <label for="name">Name</label>
                    <input type="name" id="name" name="name" required>
                </div>
                <div class="input">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" required>
                </div>
                <div class="input">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                    <meter max="4" id="password-strength-meter"></meter>
                    <p id="password-strength-text"></p>
                </div>
                <div class="input">
                    <label for="mobile_no">Mobile Number</label>
                    <input type="text" id="mobile_no" name="mobile_no" onkeydown="validate()" required>
                    <span id="phone_text"></span>
                </div>
                <div class="input">
                    <label for="Email_id">Email ID</label>
                    <input type="text" id="email_id" name="email_id" onkeydown="handleInput()" required>
                    <span id="text"></span>
                </div>
                
            </div>

        

            <footer>
                <input type="submit" name="submit" value="SIGN UP" class="btn-Register">
            </footer>

            <p>Already have an account?<a href="/patient">Login</a></p>
            

            
        </form>
    </div>
    <script src="/js/password.js"></script>
    <script src="/js/phone_number.js"></script>
    <script src="/js/email.js"></script>
</body>

</html>